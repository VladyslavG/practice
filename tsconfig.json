{
  "compilerOptions": {
    "outDir": "build",
    "module": "ESNext",
    "jsx": "react",
    "target": "ESNext",
    "strict": true,
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
